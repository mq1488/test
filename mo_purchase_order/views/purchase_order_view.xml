<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="mo_purchase_order_form" model="ir.ui.view">
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/group/group/field[@name='date_order']" position="after">
                    <field name="is_discount" invisible="1"/>
                </xpath>

            </field>
        </record>

        <record id="mo_procurement_order_form" model="ir.ui.view">
            <field name="model">procurement.order</field>
            <field name="inherit_id" ref="procurement.procurement_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/group/group/field[@name='product_id']" position="after">
                       <button name="make_po" string="PO!" type="object" class="oe_highlight"/>
                </xpath>

            </field>
        </record>

    </data>
</openerp>